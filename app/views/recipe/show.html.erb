<div class="show_recipe_container">
  <h2><%=@recipe.name%></h2>
  <div class="text_section">
    <div>
      <p>Preparation time: <%=@recipe.preparation_time%></p>
      <p>Cooking time: <%=@recipe.cooking_time%></p>
      <p>Steps go here...</p>
    </div>
    <div>
      <%= form_with do |form|%>
        <%= form.label :public, "Public" %>
        <%= form.check_box :public, :checked => @recipe.public, :value => @recipe.public %>
      <%end%>
    </div>
  </div>
  <div class="button_section">
    <a>Generate shopping list</a>
    <a href='/add_food/<%=@recipe.id%>'>Add ingredient</a>
  </div>
  <div class="table_section">
    <table>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Action</th>
      </tr>
      <%@recipe_food.each do |rf|%>
        <tr>
          <td><%=rf.food.name%></td>
          <td><%=rf.quantity%></td>
          <td><%=rf.food.measurement_unit * rf.food.price%></td>
          <td><a href="">Modify</a>&nbsp<a href="">Remove</a>
          </td>
        </tr>
      <%end%>
    </table>
  </div>
</div>